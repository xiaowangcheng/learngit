<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manage.rain">

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon_rain_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_rain_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.manage.rain.application.GlideConfiguration"
            android:value="GlideModule"/>

        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.MainActivity"/>

        <activity  android:name=".ui.order.OrderActivity"
            ></activity>
        <activity  android:name=".ui.order.OrderDetailActivity"
            android:theme="@style/AppTheme" ></activity>
        <activity  android:name=".ui.order.OrderDetaildefectsActivity"
            android:theme="@style/AppTheme" ></activity>
        <activity  android:name=".ui.comments.CommentsActivity"
            android:theme="@style/AppTheme"></activity>

        <activity android:name=".ui.order.CaptureResultActivity"
            android:theme="@style/AppTheme"></activity>

        <activity android:name=".ui.order.AddDefactActivity"
            android:theme="@style/AppTheme"></activity>

    </application>

</manifest>