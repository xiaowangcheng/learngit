<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/StyleLayoutMain">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/rl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    />

                <LinearLayout
                    android:background="@color/white"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        style="@style/function_list"
                        android:layout_marginTop="0dp"
                        android:paddingBottom="5dp"
                        android:gravity="center">
                        <TextView
                            android:text="备注说明"
                            android:layout_margin="5dp"
                            android:textSize="12sp"
                            style="@style/textstyle" />
                        <View
                            style="@style/linestyle0"></View>
                        <TextView
                            android:text="两室一厅的窗帘面积约为20m"
                            android:textSize="12sp"
                            android:layout_margin="5dp"
                            style="@style/textstyle" />
                        <View
                            style="@style/linestyle0"></View>
                        <TextView
                            android:text="用于别墅、会议室等场所的大型窗帘，暂时不提供服务。"
                            android:textSize="12sp"
                            android:layout_margin="5dp"
                            style="@style/textstyle" />
                        <View
                            style="@style/linestyle0"></View>
                        <TextView
                            android:text="不含上门拆卸服务"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            style="@style/textstyle" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:background="@color/white">

                <TextView
                    android:drawableTop="@mipmap/icon_pro_service1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="高效服务"/>
                <TextView
                    android:drawableTop="@mipmap/icon_pro_service1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="每单投保"/>
                <TextView
                    android:drawableTop="@mipmap/icon_pro_service1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="上门取件"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_margin="20dp"
                android:layout_height="108dp">

                <LinearLayout
                    style="@style/function_list"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/tv_shuoming"
                        android:textSize="13sp"
                        android:text="《彩虹清洗说明及不能提供清洗服务衣物列表》"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:background="#FFFCD0"
        android:layout_alignParentBottom="true">

        <TextView
            android:text="请等待彩虹小哥上门确认价格并付款"
            android:textColor="#212121"
            style="@style/textstyle"  />

    </RelativeLayout>
</RelativeLayout>